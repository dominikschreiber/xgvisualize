@import "variables.less";
@import "mixins.less";

// ===== simple reset ===============================================

* {
  margin: 0;
  padding: 0;
  .box-sizing(border-box);
}

// ===== global =====================================================

html, body {
  height: 100%;
  overflow: hidden;
  font-family: 'Exo', sans-serif;
}

.app {
  padding-top: @header-height;
}

// ===== header bar =================================================

.app-header {
  height: @header-height;
  margin-top: -@header-height;

  .simple-linear-gradient(@dark);
}

.app-brand {
  display: inline-block;
  padding: 14px;
  height: @header-height;
  width: 200px;

  color: white;
  font-weight: bold;
  text-decoration: none;

  background-color: transparent;

  .transition(background-color @duration);
}

.app-brand:hover {
  background-color: rgba(255, 255, 255, .1);
}

.app-controls {
  float: right;
  overflow: auto;
  color: #ffffff;

  & > * {
    float: left;
    margin: 0 1em;
  }

  input[type=text],
  input[type=number] {
    margin: 0 .5em;
    padding: .25em .5em;
    width: 5em;
    line-height: 1.8;
    border: 0px solid transparent;
    border-radius: 2px;
  }

  .icon {
    margin-top: ((@header-height - 14px) / 2);
    margin-bottom: ((@header-height - 14px) / 2);
  }

  label {
    margin: 13px 0;
  }
}

// ===== icons ======================================================

.icon {
  display: block;
  width: 14px;
  height: 14px;
  background-image: url( '/img/glyphicons-halflings.png' );
  background-repeat: no-repeat;

  &.inverse {
    background-image: url( '/img/glyphicons-halflings-white.png' );
  }

  &.forward { background-position: -335px -73px;}
  &.backward { background-position: -241px -73px;}
  &.sync { background-position: -336px -122px; }
}

// ===== main =======================================================

#main-container {
  height: 100%;
  background-color: white;
  z-index: 0;
}

#main-container.empty {
  .transition(background-color @duration);
}

#main-container.empty.active {
  background-color: fade(@accent, 30);
}

#main-container.empty:before {
  content: attr(data-text);

  display: block;
  height: 400px;
  width: 600px;
  margin-top: -200px;
  margin-left: -300px;

  position: absolute;
  top: 50%;
  left: 50%;

  font-size: 300%;
  text-align: center;
}

// ===== helper =====================================================

#helper-container {
  position: absolute;
  background-color: rgba(190, 150, 50, .3);
  z-index: 9999999999999;
}

// ===== container ==================================================

.bordered {
  border: 1px solid black;
}

.container {
  .box-sizing(border-box);
  position: relative;
}

// ===== content ====================================================

.content,
.content > * {
  display: block;
  width: 100%;
  height: 100%;
}

// ===== sync =======================================================

.sync {
  position: absolute;
  top: 1em;
  right: 1em;
  opacity: .1;

  &.synced { 
    opacity: 1;
  }
}