* {
  margin: 0;
  padding: 0;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -ms-box-sizing: border-box;
  -o-box-sizing: border-box;
  box-sizing: border-box;
}
html,
body {
  height: 100%;
  overflow: hidden;
  font-family: 'Exo', sans-serif;
}
img {
  display: inline;
}
.app {
  padding-top: 50px;
}
.app-header {
  position: relative;
  height: 50px;
  margin-top: -50px;
  z-index: 999999;
  background-image: -webkit-linear-gradient(top left, #2b3034, #000000);
  background-image: -moz-linear-gradient(top left, #2b3034, #000000);
  background-image: -ms-linear-gradient(top left, #2b3034, #000000);
  background-image: -o-linear-gradient(top left, #2b3034, #000000);
  background-image: linear-gradient(top left, #2b3034, #000000);
  background-color: #16181a;
}
.app-brand {
  display: block;
  float: left;
  padding: 14px;
  height: 50px;
  color: white;
  font-weight: bold;
  text-decoration: none;
  background-color: transparent;
  -webkit-transition: background-color 0.1s;
  transition: background-color 0.1s;
}
.app-brand:hover {
  background-color: rgba(255, 255, 255, 0.1);
}
.app-controls {
  float: right;
  overflow: auto;
  color: #ffffff;
}
.app-controls > * {
  float: left;
  margin: 0 1em;
}
.app-controls input[type=text],
.app-controls input[type=number] {
  margin: 0 .5em;
  padding: .25em .5em;
  width: 5em;
  line-height: 1.8;
  border: 0px solid transparent;
  border-radius: 2px;
}
.app-controls .icon {
  margin-top: 18px;
  margin-bottom: 18px;
}
.app-controls label,
.app-controls span {
  margin: 13px;
}
.app-markers {
  position: relative;
  display: block;
  margin: 13px;
  float: left;
  width: 200px;
  color: white;
  z-index: initial;
}
.app-markers a,
.app-markers a:link,
.app-markers a:visited,
.app-markers a:active,
.app-markers a:focus,
.app-markers a:hover {
  color: white;
  text-decoration: none;
}
.app-markers .icon {
  display: inline-block;
  float: left;
  margin: 5px 1em 0;
}
.dropdown {
  position: absolute;
  top: -210px;
  left: 0;
  width: 200px;
  overflow-y: auto;
  max-height: 200px;
  color: white;
  background-color: transparent;
  box-shadow: 2px 2px 6px rgba(20, 22, 24, 0.2);
  z-index: -1;
  transition: top .5s;
}
.dropdown.visible {
  top: 37px;
}
.dropdown li {
  padding: .5ex 1em;
  list-style-type: none;
  opacity: .7;
  cursor: pointer;
}
.dropdown li.active {
  opacity: 1;
}
.icon {
  display: block;
  width: 14px;
  height: 14px;
  opacity: 1;
  background-image: url('/img/glyphicons-halflings.png');
  background-repeat: no-repeat;
}
.icon.inverse {
  background-image: url('/img/glyphicons-halflings-white.png');
}
.icon.disabled {
  opacity: .3;
}
.icon.forward {
  background-position: -335px -73px;
}
.icon.backward {
  background-position: -241px -73px;
}
.icon.sync {
  background-position: -336px -122px;
}
.icon.crosshair {
  background-position: -143px -97px;
}
.icon.marker {
  background-position: -310px -25px;
}
#main-container {
  height: 100%;
  background-color: white;
  z-index: 0;
}
#main-container.empty {
  -webkit-transition: background-color 0.1s;
  transition: background-color 0.1s;
}
#main-container.empty.active {
  background-color: rgba(50, 150, 190, 0.3);
}
#main-container.empty:before {
  content: attr(data-text);
  display: block;
  height: 400px;
  width: 600px;
  margin-top: -200px;
  margin-left: -300px;
  position: absolute;
  top: 50%;
  left: 50%;
  font-size: 300%;
  text-align: center;
}
#helper-container {
  position: absolute;
  background-color: rgba(190, 150, 50, 0.3);
  z-index: 9999999999999;
}
.bordered {
  border: 1px solid black;
}
.container {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -ms-box-sizing: border-box;
  -o-box-sizing: border-box;
  box-sizing: border-box;
  position: relative;
}
.content,
.content > * {
  display: block;
  height: 100%;
  width: auto;
  margin: auto;
}
.video > video {
  max-height: 100%;
  height: auto;
  max-width: 100%;
}
.video > canvas {
  position: absolute;
  top: 0;
  left: 50%;
  height: 90%;
  width: 100%;
  z-index: 9999999999999;
  pointer-events: none;
}
.container .sync,
.container .crosshair {
  display: none;
}
.container.dropzone > .icon {
  display: block;
  position: absolute;
  top: 1em;
  opacity: .3;
}
.container.dropzone > .sync {
  right: 1em;
}
.container.dropzone > .crosshair {
  right: 3em;
}
.container.dropzone.synced > .sync,
.container.dropzone.start-set > .crosshair {
  opacity: 1;
}
